def load_testing(root_path, dir, kwargs):
    transform = tf.image.resize_images(
        image, [224, 224])
    data = datasets.ImageFolder(root=root_path + dir, transform=transform)
    test_loader = tf.data.TFRecordDataset(data **kwargs)
    return test_loader
